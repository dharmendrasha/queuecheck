---
import JoinForm from '../components/JoinForm.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to QueueCheck">
		<!-- Sign Up Section -->
		<div class="bg-green-200 w-full py-10 flex flex-col items-center text-center">
			<h1 class="text-3xl font-bold mb-2">Sign Up</h1>
			<p class="text-lg mb-5">Surprise. We are using our own tool for new users. But don't worry. Acceptance rate is high and wait not too long ;)</p>
			
				<JoinForm />
			
			
		</div>
	
		<!-- Stats Section -->
		<div class="w-full bg-white py-10 flex justify-around items-center text-center">
			<div>
				<h2 class="text-5xl font-bold">8039</h2>
				<p class="text-lg">on waitlist</p>
			</div>
			<div>
				<h2 class="text-5xl font-bold">7868</h2>
				<p class="text-lg">accepted</p>
			</div>
			<div>
				<h2 class="text-5xl font-bold">98%</h2>
				<p class="text-lg">accepted</p>
			</div>
		</div>
	
		<!-- Verification Section -->
		<div class="flex items-center justify-center mt-5">
			<div class="bg-green-200 rounded-full px-4 py-2 flex items-center">
				<input type="checkbox" class="mr-2" checked disabled>
				<p class="text-green-600 font-bold">QueueCheck verified</p>
			</div>
		</div>
</Layout>